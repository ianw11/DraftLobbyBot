    "version": "2.0.0",
    "configurations": [
        {
            "name": "Run Unit Tests Full (Windows)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "test"
            ],
            "outputCapture": "std"
        },
        {
            "name": "Run Unit Tests (Windows)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "testNoLint"
            ],
            "outputCapture": "std"
        },
        {
            "name": "Run Unit Tests (Unix)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "testUnix"
            ],
            "outputCapture": "std"
        },
        {
            "name": "Start Discord Bot With Linting (Full)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "start"
            ],
            "outputCapture": "std"
        },
        {
            "name": "Start Discord Bot (Quicker)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "startNoLint"
            ],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "[DEPRECATED] Run Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-bdd",
                "--timeout", "10000",
                "--colors",
                "-require", "ts-node/register",
                "--recursive",
                "${workspaceFolder}/test/**/*.spec.ts"
            ],
            "internalConsoleOptions": "openOnFirstSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/test/tsconfig.json"
            },
            "preLaunchTask": "buildNoLint"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "[DEPRECATED] Start Discord Bot Normally",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "preLaunchTask": "buildNoLint"
        }
    ]
}